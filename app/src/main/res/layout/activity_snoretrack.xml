<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context="com.google.hangouts.hypnosture.SnoreTrackActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Snore Track" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/textViewIntensity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewMild"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toLeftOf="@+id/textViewFri"
        android:layout_toStartOf="@+id/textViewFri"
        android:text="Intensity"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/textViewSecondsSnored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignBottom="@+id/textViewIntensity"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:text="No of seconds"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/textViewSnored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewIntensity"
        android:layout_alignBottom="@+id/textViewIntensity"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/textViewFri"
        android:layout_toRightOf="@+id/textViewFri"
        android:text="Snored"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/textViewMild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewMildNo"
        android:layout_alignBottom="@+id/textViewMildNo"
        android:layout_alignEnd="@+id/textViewIntensity"
        android:layout_alignRight="@+id/textViewIntensity"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:text="Mild"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/textViewLoud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewMild"
        android:layout_alignStart="@+id/textViewMild"
        android:layout_below="@+id/textViewMildNo"
        android:text="Loud"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/textViewEpic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewLoud"
        android:layout_alignStart="@+id/textViewLoud"
        android:layout_below="@+id/textViewLoud"
        android:layout_marginTop="49dp"
        android:text="Epic"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/textViewMildNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewLoudNo"
        android:layout_alignLeft="@+id/textViewLoudNo"
        android:layout_alignStart="@+id/textViewLoudNo"
        android:layout_marginBottom="50dp"
        android:inputType="number"
        android:text="120"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/textViewLoudNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewFri"
        android:layout_alignEnd="@+id/textViewSnored"
        android:layout_alignRight="@+id/textViewSnored"
        android:layout_marginBottom="128dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="100"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/textViewEpicNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewEpic"
        android:layout_alignBottom="@+id/textViewEpic"
        android:layout_alignEnd="@+id/textViewLoudNo"
        android:layout_alignRight="@+id/textViewLoudNo"
        android:text="40"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/textViewTotal"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="TOTAL" />

    <TextView
        android:id="@+id/textViewFri"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewTotal"
        android:layout_alignEnd="@+id/textViewTotal"
        android:layout_alignRight="@+id/textViewTotal"
        android:layout_marginBottom="29dp"
        android:text="4.20 min" />

</RelativeLayout>
