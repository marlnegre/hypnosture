<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.hangouts.hypnosture.EditProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="165sp"
            android:layout_height="160sp"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="44dp"
            android:background="@drawable/profile"
            android:scaleType="centerCrop"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="107dp" />
        <TextView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/profileImage"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:text="@string/profile"
            android:textColor="@color/LoginEdittextColor"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="16dp" />
        <EditText
            android:id="@+id/fname"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lname"
            android:layout_alignStart="@+id/lname"
            android:layout_below="@+id/profileImage"
            android:ems="10"
            android:hint="@string/profilefname"
            tools:layout_editor_absoluteX="47dp"
            tools:layout_editor_absoluteY="267dp" />
        <EditText
            android:id="@+id/lname"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:ems="10"
            android:hint="@string/profilelname"
            tools:layout_editor_absoluteX="47dp"
            tools:layout_editor_absoluteY="318dp" />
        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lname"
            android:layout_marginTop="9dp"
            android:layout_toLeftOf="@+id/profileImage"
            android:layout_toStartOf="@+id/profileImage"
            android:text="@string/profilesex"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="390dp" />
        <RadioButton
            android:id="@+id/maleradiobtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sex"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:layout_toEndOf="@+id/sex"
            android:layout_toRightOf="@+id/sex"
            android:text="@string/profilemale"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="390dp" />
        <RadioButton
            android:id="@+id/femaleradiobtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/sex"
            android:layout_alignBottom="@+id/sex"
            android:layout_toEndOf="@+id/maleradiobtn"
            android:layout_toRightOf="@+id/maleradiobtn"
            android:text="@string/profilefem"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="386dp"
            tools:layout_editor_absoluteY="645dp" />
        <TextView
            android:id="@+id/birthdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/profile"
            android:layout_alignRight="@+id/profile"
            android:layout_below="@+id/femaleradiobtn"
            android:layout_marginTop="12dp"
            android:text="@string/profilebdate"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="447dp" />
        <EditText
            android:id="@+id/bdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/birthdate"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="date"
            tools:layout_editor_absoluteX="98dp"
            tools:layout_editor_absoluteY="483dp" />

        <Button
            android:id="@+id/okbutton"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/birthdate"
            android:layout_alignRight="@+id/birthdate"
            android:layout_below="@+id/bdate"
            android:background="@color/ButtonColor"
            android:text="@string/profilebtn"
            android:textColor="@color/LoginEdittextColor"
            tools:layout_editor_absoluteX="165dp"
            tools:layout_editor_absoluteY="536dp" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
