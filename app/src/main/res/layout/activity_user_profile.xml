<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.google.hangouts.hypnosture.USER.UserProfile">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="165dp"
        android:layout_height="150dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="@drawable/profilehome" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="200dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat"
        android:textSize="17dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editTextFullName"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Email" />


    <TextView
        android:id="@+id/editTextFullName"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/editTextBirthday"
        android:layout_alignStart="@+id/editTextBirthday"
        android:layout_below="@+id/circleImageView"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:text="Fullname"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />


    <TextView
        android:id="@+id/editTextBirthday"
        android:textAppearance="@style/Base.TextAppearance.AppCompat"
        android:layout_width="250dp"
        android:textSize="17dp"
        android:gravity="center"
        android:layout_height="40dp"
        android:layout_below="@+id/textViewEmail"
        android:layout_centerHorizontal="true"
        android:text="Birthday" />


    <TextView
        android:id="@+id/editTextSex"
        android:textAppearance="@style/Base.TextAppearance.AppCompat"
        android:textSize="17dp"
        android:text="Sex"
        android:gravity="center"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/editTextBirthday"
        android:layout_alignStart="@+id/editTextBirthday"
        android:layout_below="@+id/editTextBirthday"
     />


</RelativeLayout>
