<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundGravity="center"
    tools:context="com.google.hangouts.hypnosture.Fragment_Home">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="427dp"
            android:layout_height="319dp"
            android:layout_above="@+id/angle"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="67dp"
            android:adjustViewBounds="true"
            android:src="@drawable/a"
            app:layout_constraintBottom_toTopOf="@+id/angle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/angle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_above="@+id/btnDisconnect"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="21dp"
            android:layout_marginStart="37dp"
            android:text="Angle"
            app:layout_constraintBottom_toTopOf="@+id/btnDisconnect"
            app:layout_constraintStart_toStartOf="@+id/btnDisconnect"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <Button
            android:id="@+id/btnDisconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="92dp"
            android:text="Disconnect"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/angle" />


    </android.support.constraint.ConstraintLayout>

</RelativeLayout>
